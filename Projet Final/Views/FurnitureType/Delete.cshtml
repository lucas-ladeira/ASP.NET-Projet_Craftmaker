@model Projet_Final.Models.FurnitureType

@{
    ViewData["Title"] = "Supprimer type de meuble";
}

<div class="text-center mb-5">
    <h1 class="display-4 text-danger">Supprimer un type de meuble</h1>
    <p class="lead text-muted">Êtes-vous sûr de vouloir supprimer ce type ?</p>
</div>

<div class="container">
    <div class="row g-5 justify-content-center align-items-start">
        <!-- Left side: Type info + Delete Form -->
        <div class="col-lg-5 col-md-8">
            <div class="card bg-dark text-white rounded-4 shadow-lg border-0">
                <div class="card-body p-4 p-xl-5">
                    <!-- Info -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-primary small">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8 h5">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>

                    <!-- Delete Confirmation Form -->
                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3 flex-wrap">
                            <input type="submit" value="Supprimer" class="btn btn-danger btn-lg rounded-pill px-4 py-2" />
                            <a class="btn btn-outline-light btn-lg rounded-pill px-4 py-2" asp-action="Index">Retour</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right side: Associated Furnitures -->
        <div class="col-lg-5 col-md-8">
            <div class="card border-0 shadow-lg rounded-4 h-100">
                <div class="card-body p-4 p-xl-5">
                    <h4 class="mb-4 text-center text-primary">Meubles associés</h4>

                    @if (Model.Furnitures != null && Model.Furnitures.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var furniture in Model.Furnitures)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@furniture.Name</span>
                                    <span class="badge bg-secondary rounded-pill">@furniture.Price.ToString("F2") $</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted text-center fst-italic mt-3">Aucun meuble associé à ce type.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
