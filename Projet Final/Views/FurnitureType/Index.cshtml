@model IEnumerable<Projet_Final.Models.FurnitureType>

@{
	ViewData["Title"] = "Types de meubles";
}

<h1 class="text-center my-5">Liste des types de meubles enregistrés</h1>

<div style="position:fixed; right:20px; bottom:60px;">
	<a class="btn btn-success" asp-action="Create">Créer un nouveau</a>
</div>

<div class="container d-flex justify-content-center">
	<table id="typeList" class="table table-striped table-bordered mb-5">
		<thead>
			<tr class="bg-dark text-white">
				<th class="align-middle px-2">
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th class="align-middle text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td class="align-middle px-2">
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td class="align-middle text-center">
						<a title="Modifier" class="btn btn-primary rounded-circle m-1" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"> </i> </a>
						<a title="Détails" class="btn btn-warning rounded-circle m-1" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"> </i> </a>
						<a title="Supprimer" class="btn btn-danger rounded-circle m-1" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"> </i> </a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
