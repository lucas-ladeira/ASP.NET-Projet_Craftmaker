<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] | Larmoire Wood Furnitures</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Projet_Final.styles.css" asp-append-version="true" />
	<link rel="icon" type="image/x-icon" href="~/img/larmoire-logo.png">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/img/header-logo.png" alt="Header Logo" style="height: 100px;" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Magasin</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Management
							</a>
							<ul class="dropdown-menu">
								<li><a class="dropdown-item" asp-controller="Furniture" asp-action="Index">Furnitures</a></li>
								<li><a class="dropdown-item" asp-controller="FurnitureType" asp-action="Index">Types de Furniture</a></li>
							</ul>
						</li>
					</ul>
					<form class="d-flex" asp-controller="Home" asp-action="Filter" role="search">
						<input name="searchString" class="form-control me-2" type="search" placeholder="Recherche" aria-label="Search">
						<button class="btn btn-outline-success" type="submit">Recherche</button>
					</form>
					<ul class="navbar-nav">
						@await Component.InvokeAsync("ShoppingCartSummary")
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container-fluid">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted bg-dark mt-4 py-2">
		<div class="container text-center text-white">
			Larmoire Wood Furnitures &copy; 2025 - Bellinazzi Ltda. - <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
