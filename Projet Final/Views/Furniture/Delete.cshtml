@model Projet_Final.Models.Furniture

@{
    ViewData["Title"] = "Supprimer un meuble";
}

<div class="text-center mb-5">
    <h1 class="display-4 text-danger">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Supprimer un meuble
    </h1>
    <p class="lead text-muted">Êtes-vous sûr de vouloir supprimer ce meuble ?</p>
</div>

<div class="container">
    <div class="row g-5 justify-content-center align-items-start">

        <!-- Left side: Détails + Formulaire de suppression -->
        <div class="col-lg-5 col-md-8">
            <div class="card bg-dark text-white rounded-4 shadow-lg border-0 h-100">
                <div class="card-body p-4 p-xl-5">
                    <dl class="row mb-4">
                        <div class="mb-4 row">
                            <dt class="col-sm-4 text-primary small">Nom</dt>
                            <dd class="col-sm-8 h5">@Html.DisplayFor(m => m.Name)</dd>
                        </div>
                        <div class="mb-4 row">
                            <dt class="col-sm-4 text-primary small">Description</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.Description)</dd>
                        </div>
                        <div class="mb-4 row">
                            <dt class="col-sm-4 text-primary small">Prix</dt>
                            <dd class="col-sm-8 h5 text-warning">
                                @Model.Price.ToString("F2") $
                            </dd>
                        </div>
                        <div class="mb-4 row">
                            <dt class="col-sm-4 text-primary small">Commentaires</dt>
                            <dd class="col-sm-8 fst-italic text-muted">
                                @(Model.Comments ?? "-")
                            </dd>
                        </div>
                        <div class="mb-4 row">
                            <dt class="col-sm-4 text-primary small">Type</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary rounded-pill fs-6">
                                    @Html.DisplayFor(m => m.TypeFurniture.Name)
                                </span>
                            </dd>
                        </div>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex flex-wrap gap-3">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4 py-2">
                                <i class="bi bi-trash-fill me-2"></i>Supprimer
                            </button>
                            <a asp-action="Index" class="btn btn-outline-light btn-lg rounded-pill px-4 py-2">
                                <i class="bi bi-arrow-left me-2"></i>Retour
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right side: Aperçu de l'image -->
        <div class="col-lg-5 col-md-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden h-100">
                <img src="@Model.UrlPicture"
                     alt="@Model.Name"
                     class="card-img-top img-fluid"
                     style="height: 70vh; object-fit: contain; background-color: #f8f9fa;" />
            </div>
        </div>

    </div>
</div>
